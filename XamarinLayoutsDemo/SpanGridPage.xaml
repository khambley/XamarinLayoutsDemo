<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinLayoutsDemo.SpanGridPage"
             Title="Span Grid Page"
             BackgroundColor="#37474F">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <Image Source="comed_logo_hrz_sm_wht_rgb.png" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
        <Button BackgroundColor="#37474F" Image="settings.png" Grid.Row="1" Grid.Column="0" />
        <Button BackgroundColor="#37474F" Image="map_pin.png" Grid.Row="2" Grid.Column="0" />
        <Button BackgroundColor="#37474F" Image="search.png" Grid.Row="3" Grid.Column="0" />
        <Button BackgroundColor="#37474F" Image="envelope.png" Grid.Row="1" Grid.Column="1" />
        <Button BackgroundColor="#37474F" Image="heart.png" Grid.Row="2" Grid.Column="1" />
        <Button BackgroundColor="#37474F" Image="barcode.png" Grid.Row="3" Grid.Column="1" />
    </Grid>
    
</ContentPage>